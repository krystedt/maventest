pipeline {
    agent any
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'cd Test && mvn -Dmaven.test.failure.ignore=true clean install' 
            }
            post {
                success {
                    junit 'Test/target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}
